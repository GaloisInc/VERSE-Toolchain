{
    "name": "cn-client",
    "publisher": "galois",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:c"
    ],
    "main": "./out/extension",
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "^20.12.7",
        "typescript": "^5.4.0"
    },
    "contributes": {
        "grammars": [
            {
                "path": "./syntaxes/cn.tmLanguage.json",
                "scopeName": "source.c.cn",
                "injectTo": [
                    "source.c"
                ]
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "source.cn",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "punctuation.section.block.begin.cn",
                        "settings": {
                            "foreground": "#006600"
                        }
                    },
                    {
                        "scope": "punctuation.section.block.end.cn",
                        "settings": {
                            "foreground": "#006600"
                        }
                    },
                    {
                        "scope": "invalid.deprecated.cn",
                        "settings": {
                            "fontStyle": "italic strikethrough"
                        }
                    }
                ]
            }
        }
    },
    "scripts": {
        "compile": "tsc --build",
        "watch": "tsc --build --watch"
    }
}
