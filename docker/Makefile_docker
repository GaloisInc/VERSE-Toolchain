.PHONY: all release dev-env deps

all:
	@echo 'targets: deps|release|dev-env'

deps :
	docker build --network=host --tag cerberus:deps -f Dockerfile.deps .

release: deps
	docker build --network=host --tag cerberus:release -f Dockerfile.release .
	@echo 'for example: docker run --volume `PWD`:/data/ cerberus:release tests/tcc/00_assignment.c --pp=core'

dev-env: deps
	docker build --network=host --tag cerberus:dev-env -f Dockerfile.dev-env .
	@echo 'for example: docker run -ti --volume `PWD`:/home/user1/cerberus/ cerberus:dev-env'
