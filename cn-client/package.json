{
    "name": "cn-client",
    "displayName": "CN",
    "publisher": "galois",
    "repository": {
        "url": "https://github.com/GaloisInc/VERSE-Toolchain",
        "type": "git"
    },
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onLanguage:c"
    ],
    "main": "./out/extension",
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.12.7",
        "@types/vscode": "^1.75.0",
        "@vscode/vsce": "^2.26.0",
        "esbuild": "^0.20.2",
        "typescript": "^5.4.0"
    },
    "contributes": {
        "commands": [
            {
                "command": "CN.runOnFile",
                "title": "CN: Run CN on the current file"
            }
        ],
        "configuration": {
            "title": "CN",
            "properties": {
                "CN.cerbRuntime": {
                    "type": "string",
                    "default": null,
                    "description": "Location of Cerberus runtime files"
                },
                "CN.runOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run CN whenever a file is saved"
                },
                "CN.serverPath": {
                    "type": "string",
                    "default": null,
                    "description": "Location of the LSP server"
                },
                "CN.debugPath": {
                    "type": "string",
                    "default": null,
                    "description": "Location of the CN-DAP executable"
                },
                "CN.showGillianDebugLenses": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show code lenses that activate Gillian debugging. Note that this functionality relies on the Gillian debugging extension (https://gillianplatform.github.io/sphinx/debugger.html) being installed, or run in a development host context."
                }
            }
        },
        "debuggers": [
            {
                "type": "CN",
                "label": "CN Debugger"
            }
        ],
        "grammars": [
            {
                "path": "./syntaxes/cn.tmLanguage.json",
                "scopeName": "source.c.cn",
                "injectTo": [
                    "source.c"
                ]
            }
        ],
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "source.cn",
                        "settings": {
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "punctuation.section.block.begin.cn",
                        "settings": {
                            "foreground": "#006600"
                        }
                    },
                    {
                        "scope": "punctuation.section.block.end.cn",
                        "settings": {
                            "foreground": "#006600"
                        }
                    },
                    {
                        "scope": "invalid.deprecated.cn",
                        "settings": {
                            "fontStyle": "italic strikethrough"
                        }
                    }
                ]
            },
            "files.associations": {
                "*.h": "c"
            }
        }
    },
    "scripts": {
        "compile": "tsc --build",
        "watch": "tsc --build --watch",
        "dist": "vsce package",
        "bundle": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "vscode:prepublish": "npm run bundle -- --minify"
    }
}
